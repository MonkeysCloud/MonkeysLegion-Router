{
  "name": "monkeyscloud/monkeyslegion-router",
  "description": "Comprehensive attribute- and DSL-based HTTP router for MonkeysLegion with middleware, named routes, constraints, and caching",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "router",
    "http",
    "psr-7",
    "middleware",
    "routing",
    "attributes",
    "monkeyslegion"
  ],
  "authors": [
    {
      "name": "MonkeysCloud",
      "email": "jorge@monkeys.cloud"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.4",
    "psr/http-message": "^2.0",
    "monkeyscloud/monkeyslegion-http": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "MonkeysLegion\\Router\\": "src/",
      "MonkeysLegion\\Router\\Attributes\\": "src/Attributes/",
      "MonkeysLegion\\Router\\Middleware\\": "src/Middleware/",
      "MonkeysLegion\\Router\\Constraints\\": "src/Constraints/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MonkeysLegion\\Router\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "analyse": "phpstan analyse src --level=8",
    "check": [
      "@analyse",
      "@test"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-main": "2.0.x-dev"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  }
}